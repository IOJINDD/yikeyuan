/* pages/index/info-list/info-list.wxss */
.product-list {
  background-color: #fff;
}
.page__bd {
  height: 52px;
  overflow-x: scroll;
  position: fixed;
  background-color: #fff;
  z-index: 1000;
  display: inline-block;
  white-space: nowrap;
  border-bottom: 1px solid #ccc;
}
.span_tab {
  font-size:30rpx;
  height:50px;
  display:inline-block;
  color:#999;
  line-height:50px;
  width:33%;
  text-align:center;
}
.actived_tab {
  border-bottom:2px solid #2e84d4;
  color: #000;
}
.weui-media-box__hd_in-appmsg {
  width:100px;
  height:100px;
  line-height:100px;
}
.weui-media-box__desc {
  margin-top: 40px;
}
.labelDetail .number {
  font-size: 30rpx;
  color: #646464;
}
 .price {
  font-size: 28rpx;
  color: #ff5b5b;  
  margin-right: 30px;
}
 .price em {
  font-size: 28rpx;
}
.labelDetail .label {
  display: inline-block;
  color: #298eff;
  border: 1px solid #94c6ff;
  border-radius: 10rpx;
  padding: 6rpx 12rpx;
  font-size: 26rpx;
  margin-right: 10px;
}
.weui-media-box_right {
  margin-left:5%;
  margin-top:60px;
}
.weui-media-box {
  border-bottom:0px solid #ccc;
}
.dataBody {
  height: 150px; 
  position: relative;
}
.dataBody_title {
  position:absolute;
  top:10px;
  left:15px;
  color:#fff;
  font-weight: 300;
  font-size:34rpx;
}
.dataBody_subTitle {
  margin-top: 6px;
  top:20px;
  left:15px;
  color:#fff;
  font-size:26rpx 
}
label {
  display: block;
}
.weui-media-box {
  padding: 8px 15px;
}